wd_cc_benchmark(
    name = "bench-json",
    srcs = ["bench-json.c++"],
    deps = [
        "//src/workerd/api:r2-api_capnp",
        "@capnp-cpp//src/kj",
    ],
)

wd_cc_benchmark(
    name = "bench-mimetype",
    srcs = ["bench-mimetype.c++"],
    deps = [
        "//src/workerd/util",
    ],
)

wd_cc_benchmark(
    name = "bench-headers",
    srcs = ["bench-headers.c++"],
    deps = [
        "@capnp-cpp//src/kj/compat:kj-http",
    ],
)
