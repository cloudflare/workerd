+++ b/include/v8-value-serializer.h
@@ -293,6 +293,13 @@ class V8_EXPORT ValueDeserializer {
    */
   uint32_t GetWireFormatVersion() const;
 
+  /**
+   * Sets the underlying wire format version. Should only be used if there's no
