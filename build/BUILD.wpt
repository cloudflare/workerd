load("@workerd//:build/wpt_test.bzl", "wpt_get_directories")

[filegroup(
    name = dir,
    srcs = glob(["{}/**/*".format(dir)]),
    visibility = ["//visibility:public"],
) for dir in wpt_get_directories(
    excludes = [
        "dom",
    ],
    root = "",
)]

[filegroup(
    name = dir,
    srcs = glob(["{}/**/*".format(dir)]),
    visibility = ["//visibility:public"],
) for dir in wpt_get_directories(root = "dom")]
