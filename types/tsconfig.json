{
  "extends": "../tools/base.tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ESNext", "dom", "dom.iterable"],
    "types": ["@types/node"],
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@workerd/*": ["../bazel-bin/src/workerd/*"]
    },
    "checkJs": true,
    "composite": true,
    "skipLibCheck": true,

    "exactOptionalPropertyTypes": false,
    "strictNullChecks": false,
    "noImplicitReturns": false,
    "noImplicitOverride": false,
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "scripts/**/*.ts", "eslint.config.mjs"],
  "exclude": ["test/types/**/*.ts", "src/worker/**", "node_modules", "**/*.mjs"]
}
