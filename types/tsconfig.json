{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "lib": ["ESNext", "dom", "dom.iterable"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["@types/node", "@types/debug"],
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@workerd/*": ["../bazel-bin/src/workerd/*"]
    },
    "checkJs": true,
    "allowJs": true,
    "composite": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "scripts/**/*.ts", "eslint.config.mjs"],
  "exclude": ["test/types/**/*.ts", "src/worker/**"]
}
